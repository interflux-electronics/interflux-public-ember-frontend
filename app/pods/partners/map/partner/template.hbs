<div id='partner' {{did-insert this.onInsert}}>
  <div class='overlay'>
    <a href={{href-to 'partners.map'}}></a>
  </div>

  <div class='card'>
    {{#with this.company as |c|}}
      <h2>{{c.businessName}}</h2>

      {{#if c.description}}
        <div class='description'>{{markdown c.description}}</div>
      {{/if}}

      <p class='address'>
        {{#if c.legalName}}
          <span>{{c.legalName}}</span>
        {{/if}}
        {{#if c.address}}
          <span>{{c.address}}</span>
        {{/if}}
        {{#if c.country.nameEnglish}}
          <span>{{c.country.nameEnglish}}</span>
          <img
            src='{{env 'cdnHost'}}/images/public/flags/{{c.country.id}}.svg'
            alt={{c.country.nameEnglish}}
            width='32'
            height='24'
            class={{lowercase c.country.id}}
          />
        {{/if}}
      </p>

      {{#if c.website}}
        <p class='website'>
          <Link @url={{c.websiteForRobots}} @label={{c.websiteForHumans}} />
        </p>
      {{/if}}

      {{#if (or c.emailGeneral c.emailSupport c.emailOrders c.emailAccounting)}}
        <p class='email'>
          {{#if c.emailGeneral}}
            <span>
              <Link
                @url='mailto:{{c.emailGeneral}}'
                @label={{c.emailGeneral}}
              />
            </span>
          {{/if}}

          {{#if c.emailSupport}}
            <span>
              <Link
                @url='mailto:{{c.emailSupport}}'
                @label={{c.emailSupport}}
              />
            </span>
          {{/if}}

          {{#if c.emailOrders}}
            <span>
              <Link @url='mailto:{{c.emailOrders}}' @label={{c.emailOrders}} />
            </span>
          {{/if}}

          {{#if c.emailAccounting}}
            <span>
              <Link
                @url='mailto:{{c.emailAccounting}}'
                @label={{c.emailAccounting}}
              />
            </span>
          {{/if}}
        </p>
      {{/if}}

      {{#if c.phone}}
        <p class='phone'>
          <Link @url='tel:{{c.phoneForRobots}}' @label={{c.phoneForHumans}} />
        </p>
      {{/if}}

      {{#if c.fax}}
        <p class='fax'>
          <Link @url='tel:{{c.faxForRobots}}' @label={{c.faxForHumans}} />
        </p>
      {{/if}}

      <ul class='members'>
        {{#each c.companyMembers as |member|}}
          <li>
            <div class='avatar'>
              {{#if member.hasAvatar}}
                <img src={{member.avatarSrc}} alt={{member.fullName}} />
              {{else}}
                <img
                  src='{{env 'cdnHost'}}/images/public/no-avatar.svg'
                  aria-hidden='true'
                  width='27'
                  height='27'
                />
              {{/if}}
            </div>

            <div class='details'>
              <h3>{{member.person.fullName}}</h3>
              {{#if member.title}}
                <p>{{member.title}}</p>
              {{/if}}
              {{#if member.verifiedEmail}}
                <span>
                  <Link
                    @url='mailto:{{member.verifiedEmail}}'
                    @label={{member.verifiedEmail}}
                  />
                </span>
              {{/if}}
              {{#if member.verifiedPhone}}
                <p>
                  <Link
                    @url='tel:{{member.phoneForRobots}}'
                    @label={{member.verifiedPhone}}
                  />
                </p>
              {{/if}}
            </div>
          </li>
        {{/each}}
      </ul>
    {{/with}}
  </div>
</div>