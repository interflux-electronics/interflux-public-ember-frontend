            <div class='image'>
              <ResponsiveImage
                @path={{product.avatarPath}}
                @variations={{product.avatarVariations}}
                @alt={{@roduct.avatarAlt}}
              />
            </div>

            <div class='text'>
              <h3>{{span-each-word product.name}}</h3>
              <h4>
                {{span-each-word
                  (t product.familyLabel (concat 'product.1.' product.id))
                }}
              </h4>
            </div>
          </a>
        </li>
      {{/if}}
    {{else}}
      <li class='loading'>
        <svg class='shimmer' width='400' height='400'></svg>
      </li>
      <li class='loading'>
        <svg class='shimmer' width='400' height='400'></svg>
      </li>
      <li class='loading'>
        <svg class='shimmer' width='400' height='400'></svg>
      </li>
    {{/each}}
  </ul>
  <div class='cta'>
    <Button
      @route='products'
      @text={{t 'See all products' 'home.7'}}
      @theme='legacy tertiary orange'
    />
  </div>
</Section>

<Section::Events />

