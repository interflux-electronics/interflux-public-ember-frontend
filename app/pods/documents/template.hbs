<Section @id='categories'>
  <h3>{{t 'What type of document do you need?'}}</h3>
  <nav>
    {{#each this.categories as |category|}}
      <a href={{href-to 'documents.category' category.slug}}>
        <Icon @name={{category.icon}} />
        <p><strong>{{t category.name}}</strong></p>
        <p>{{t category.gist}}</p>
        <p><span>{{t category.cta}}</span></p>
      </a>
    {{/each}}
  </nav>
</Section>

{{outlet}}