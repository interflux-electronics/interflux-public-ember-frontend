{{#if @products}}
  <ul class='hidden {{if this.expanded "expanded"}}'>
    {{#each @products as |product|}}
      <ProductGroupPage::Product @product={{product}} />
    {{/each}}
  </ul>
  {{#if this.expanded}}
    <Button
      @text='Show only recommended products'
      @icon='arrow-up'
      @theme='secondary medium grey-border blue-focus icon-right'
      @onClick={{this.onClick}}
    />
  {{else}}
    <Button
      @text='Show old products'
      @icon='arrow-down'
      @theme='secondary medium grey-border blue-focus icon-right'
      @onClick={{this.onClick}}
      @class='expand'
    />
  {{/if}}
{{/if}}