<div id='contact'>
  <Section @id='hero' @aria-labelledby='h1'>
    <div class='bg'>
      <div class='preload'></div>
      <div class='high-res'></div>
    </div>
    <h1 id='h1'>{{t 'Contact' 'contact.1'}}</h1>
  </Section>

  <Section @id='map' @aria-labelledby='map'>
    <h2 id='map-h2' class='h2'>
      {{t 'We offer support worldwide' 'contact.2'}}
    </h2>

    <p class='p'>
      {{t
        'The Interflux Network consists of 40 partners worldwide and is located in key regions for the electronics manufacturing industry. That means there is good chance someone near you can deliver Interflux products and localised support.'
        'contact.3'
      }}
    </p>

    <div class='container'>
      {{#if @isLoading}}
        <p class='p'>{{t 'Loading ...' 'contact.4'}}</p>
        <div class='preload'></div>
      {{else}}
        <Button @route='partners.map' @class='map'>
          <img
            src='{{cdn}}/images/public/interflux-network-map/interflux-network-map@1000x450.webp'
            alt='the interflux network'
            width='1000'
            height='450'
          />
          <div class='preload'></div>
        </Button>

        <Button
          @route='partners.map'
          @text={{t 'Expand map' 'contact.5'}}
          @icon='expand'
          @theme='large secondary white-text-on-blue icon-left'
        />
      {{/if}}
    </div>
  </Section>

  <ContactPage::Questionair
    @companies={{@companies}}
    @countries={{@countries}}
    @isLoading={{@isLoading}}
  />

  <ContactPage::Search @isLoading={{@isLoading}} @companies={{@companies}} />

  <Section @id='join' @aria-labelledby='join-h2'>
    <div class='image'>
      <img
        src='{{cdn}}/images/public/containers-at-port/containers-at-port@600x400.webp'
        alt='containers at port in Singapore'
        width='300'
        height='200'
      />
      <div class='preload'></div>
    </div>

    <div class='text'>
      <h2 id='join-h2' class='h2'>
        {{t 'Become an Interflux Partner' 'contact.6'}}</h2>
      <p class='p'>
        {{t
          'Gain access to our worldwide distribution network, exclusivity to distribute Interflux products in your region and some of the best soldering chemistry your customers have ever tried.'
          'contact.7'
        }}
      </p>
      <Button
        @text={{t 'Learn more' 'contact.8'}}
        @icon='lightbulb'
        @url='mailto:ask@interflux.com'
        @theme='medium primary orange icon-left'
      />
    </div>
  </Section>

  <Section::Events />
</div>