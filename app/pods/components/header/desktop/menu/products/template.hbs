<Header::Desktop::Menu @isOpen={{@isOpen}}>
  <div class='links'>
    <h2>{{t 'Products we develop' 'header.29'}}</h2>
    <Button
      @text={{t 'LMPA-Q' 'header.30'}}
      @icon='arrow-right'
      @route='products.subset'
      @model='for-low-melting-point-soldering'
      @onFocus={{fn this.showImage 1}}
      @onMouseEnter={{fn this.showImage 1}}
    />
    <Button
      @text={{t 'Soldering fluxes' 'header.31'}}
      @icon='arrow-right'
      @route='products.subset'
      @model='soldering-fluxes'
      @onFocus={{fn this.showImage 2}}
      @onMouseEnter={{fn this.showImage 2}}
    />
    <Button
      @text={{t 'Solder pastes' 'header.32'}}
      @icon='arrow-right'
      @route='products.subset'
      @model='solder-pastes'
      @onFocus={{fn this.showImage 3}}
      @onMouseEnter={{fn this.showImage 3}}
    />
    <Button
      @text={{t 'Solder wires' 'header.33'}}
      @icon='arrow-right'
      @route='products.subset'
      @model='solder-wires'
      @onFocus={{fn this.showImage 4}}
      @onMouseEnter={{fn this.showImage 4}}
    />
    <Button
      @text={{t 'Solder alloys' 'header.34'}}
      @icon='arrow-right'
      @route='products.subset'
      @model='solder-alloys'
      @onFocus={{fn this.showImage 5}}
      @onMouseEnter={{fn this.showImage 5}}
    />
    <Button
      @text={{t 'Auxiliaries' 'header.35'}}
      @icon='arrow-right'
      @route='products.subset'
      @model='auxiliaries'
      @onFocus={{fn this.showImage 6}}
      @onMouseEnter={{fn this.showImage 6}}
    />
    <Button
      @text={{t 'Fluxing systems' 'header.36'}}
      @icon='arrow-right'
      @route='products.subset'
      @model='fluxing-systems'
      @onFocus={{fn this.showImage 7}}
      @onMouseEnter={{fn this.showImage 7}}
    />
  </div>

  <div class='image' data-position={{this.imagePosition}}>
    <ResponsiveImage
      @path='/images/public/products-menu-sprite'
      @variations='@666x4662.webp,@666x4662.jpg'
    />
  </div>
</Header::Desktop::Menu>