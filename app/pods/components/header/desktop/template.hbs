<header id='desktop' role='banner' aria-label='site' class={{@theme}}>
  <nav aria-label='page'>
    <div class='left'>
      <Button @route='index' @id='logo'>
        <img
          src='{{cdn}}/images/logos/secondary-interflux-electronics-logo-1-transparent.svg'
          width='3960'
          height='1000'
          alt='Interflux Electronics'
        />
      </Button>
    </div>

    <ul class='center'>
      <li id='products' onmouseleave={{this.closeMenu}}>
        <Button
          @text={{t 'Products' 'header.1'}}
          @onClick={{this.toggleMenu}}
        />
        <Header::Desktop::Menu::Products @isOpen={{this.showProducts}} />
      </li>

      <li id='processes' onmouseleave={{this.closeMenu}}>
        <Button
          @text={{t 'Processes' 'header.2'}}
          @onClick={{this.toggleMenu}}
        />
        <Header::Desktop::Menu::Processes @isOpen={{this.showProcesses}} />
      </li>

      <li id='know-how'>
        <Button @text={{t 'Webinars' 'header.3'}} @route='webinars' />
      </li>

      <li id='company'>
        <Button @text={{t 'Company' 'header.4'}} @route='company' />
      </li>

      <li id='docs'>
        <Button @text={{t 'Docs' 'header.5'}} @route='documents' />
      </li>

      <li id='contact'>
        <Button @text={{t 'Contact' 'header.6'}} @route='contact' />
      </li>
    </ul>

    <ul class='right'>
      {{!--
      <Button
        @text='Order'
        @onClick={{this.openOrderModal}}
        @icon='truck'
        @theme='large primary orange icon-floats-left'
      />
      --}}

      <p>
        <span>
          {{markdown
            (t
              'Member of the [Interflux Group](https://interflux.group)'
              'header.7'
            )
            (hash noParagraphs=true)
          }}
        </span>
        <img
          src='{{cdn}}/images/logos/secondary-interflux-electronics-symbol-1-blue-0.svg'
          width='20'
          height='20'
          alt='Interflux Group'
        />
      </p>

      <li
        id='languages'
        onmouseover={{this.expandButton}}
        onmouseleave={{this.collapseButton}}
      >
        <button
          class='button'
          onclick={{this.toggleMenu}}
          onfocus={{this.expandButton}}
          onblur={{this.onMenuButtonBlur}}
          type='button'
        >
          <div class='icon'>
            <Svg::Translation />
          </div>
          <div class='clip' style='width: 0px'>
            <span>{{t 'Translations' 'header.38'}}</span>
          </div>
        </button>
        <Header::Desktop::Menu::Languages @isOpen={{this.showLanguages}} />
      </li>
    </ul>
  </nav>
</header>